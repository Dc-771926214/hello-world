/* 测试卷 */
.modalDlg{
  position: relative;
}
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 3;
  opacity: 0.5;
}
.close_mask {
  width: 50rpx;
  height: 50rpx;
  color:rgba(136, 136, 136, 1);
  position: absolute;
  left:650rpx;
  top:-290rpx;
  font-size: 32rpx;
  z-index: 5;
}


