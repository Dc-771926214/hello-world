/* pages/report/report.wxss */
.report-text{
	height: 362rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.report-title{
  text-align: center;
  font-size: 36rpx;
	font-weight: bold;
	letter-spacing: 2rpx;
	color: rgba(53, 53, 53, 1);
  
}
.report-text .name{
  color: rgba(53, 53, 53, 1);
  font-size: 34rpx;
  font-weight: bold;
}
.report-text .age,.report-text .intro{
font-size: 30rpx;
	
	line-height: 36rpx;
	letter-spacing: 2rpx;
	color: rgba(53, 53, 53, 1);
}
.zhu{
  margin-top: 39rpx;
  height: 322rpx;
  display: flex;
  justify-content: start;
}
.zhu .left{
  height: 322rpx;
  width: 192rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
	font-size: 26rpx;
	line-height: 26rpx;
	color: rgba(53, 53, 53, 1);
}

.heng{
  width: 196rpx;
  height: 30rpx;
  background-color: rgba(240, 190, 35, 1);
	border-radius: 15rpx;
}
