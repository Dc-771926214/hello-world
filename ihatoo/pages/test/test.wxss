/* pages/test/test.wxss */

.tabb {
  margin-top: 40rpx;
}

.swiper-tab{
    width: 50%;
    margin: 0 auto;
    text-align: center;
    height: 70rpx;
    line-height: 70rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
   font-size: 30rpx;
   border: solid 1rpx rgba(240, 190, 35, 1);
   border-radius: 35rpx;
}
.swiper-tab-item{
  width: 50%;
   font-size: 30rpx;
    color: rgba(136, 136, 136, 1);
}
.active{
   color: rgba(255, 255, 255, 1);
   background-color: rgba(240, 190, 35, 1);
    font-size: 30rpx;
    border-radius: 35rpx;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
.test-paper{
  width: 100%;
  height: 400rpx;
  background-color: yellow;
  border-radius: 30rpx;
  margin-top: 60rpx;
}
.test-start{
  width: 400rpx;
	height: 70rpx;
	background-color: rgba(240, 190, 35, 1);
	border-radius: 20rpx;
  margin-top: 40rpx;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 1);
}

